.top-bg{
  position: relative;
  width: 750rpx;
  height: 280rpx;
  overflow: hidden;
  background: #ffffff;
  z-index: 9;
}

.box{
  position: relative;
  top: -164rpx;
  z-index: 10;
}

.mine-body{
  position: relative;
  display: flex;
  flex-direction: column;
  z-index: 8;
}

.box-records{
  padding: 30rpx 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.record-label{
  font-size: 28rpx;
  color: #cccccc;
}

.item-record{
  color: #666;
  padding: 20rpx 20rpx;
  display: flex;
  border-bottom: 1rpx solid #ccc;
}

.top-mine{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}

.top-mine .avatar{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.top-mine .relation{
  width: 432rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.profile{
  border-bottom: 3rpx solid #bbb;
  width: 750rpx;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #ffffff;
}

.box-line{
  padding: 3rpx 0;
  min-height: 36rpx;
  display: flex;
  align-items: center;
}

.box-col{
  display: flex;
  flex-direction: column;
}

.re-width{
  width: 620rpx;
  display: flex;
  align-items: center;
}

.btn-play-box{
  border: 1px #ddd solid; 
  border-radius: 4px;
  width:230rpx;
  height:60rpx;
  z-index: 1px;
  transition: width 0.2s ease-in;
}

.btn-play-box-sm{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px #ddd solid; 
  border-radius: 4px;
  width:100rpx;
  height:60rpx;
  z-index: 1px;
  transition: width 0.2s ease-out;
}

.box-paly-btn{
  width: 66rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.btn-one {
  width: 8rpx;
  height: 8rpx;
  margin-right: 6rpx;
  background-color: #ccc;
  border-radius: 2px;
  box-shadow: 0px 0px 1px 1px #eee;
}

.btn-two {
  height: 28rpx;
}

.btn-three {
  width: 10rpx;
  height: 44rpx;
  margin-left: 6rpx;
  background-color: #ccc;
  border-radius: 2px;
}

.btn-red-hidden{
  display: flex;
  align-items: center;
  justify-content: center;
  color: #a94442;
  font-size: 0em;
  border: 1px #f2dede solid;
  border-radius: 4px;
  width:1rpx;
  height:60rpx;
  z-index: 1px;
  opacity: 0;
  transition: all 0.1s;
}

.an-breath{
  animation: breath 2s infinite;
}
@keyframes breath{
  50%{opacity: 0.8}
}

.listen-on{
  background-color: #ccc;
  width: 28rpx;
  border-radius: 2px;
  transition: width 0.1s ease-in;
}

.listen-off{
  background-color: #ccc;
  width: 10rpx;
  border-radius: 2px;
  transition: width 0.1s ease-in;
}

.mine-name {
  height: 50rpx;
  margin: 8rpx 0;
  font-size: 34rpx;
  color: #666666;
}

.mine-coin {
  height: 32rpx;
  font-size: 24rpx;
  color: #888888;
}

.mine-right{
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 100%;
  width: 120rpx;
}

.icon-arrow{
  width: 30rpx;
  height: 30rpx;
  transform: rotate(0.5turn);
}

.btn-follow{
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #4a5fe2;
  width: 100rpx;
  height: 48rpx;
  color: #4a5fe2;
  background: rgba(bb,bb,bb,0.1);
  border-radius: 8rpx;
}

.mine-menu{
  margin: 0;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.mine-menu .menu{
  display: flex;
  align-items: center;
  flex-direction: column;
}

.menu-num{
  color: rgba(91,92,110,0.8)
}

.menu-label{
  color: rgba(91,92,110,0.9)
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}
