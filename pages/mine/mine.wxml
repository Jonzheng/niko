  <view class="about-desc" style="text-indent:0">
    <button class="out-share" open-type="share" size="mini" bindtap="closeAbout">
      <image class="btn-share" src="../../images/share.png"></image>
    </button>
  </view>
  <view class="about-label">反馈</view>
  <view class="about-desc" style="text-indent:0">
