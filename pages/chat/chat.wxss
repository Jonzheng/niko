page{
  background: #ebebeb;
}
.box-all{
  background: #ebebeb;
}
.msg-item{
  display: flex;
  flex-direction: column;
  width: 710rpx;
  margin: 10rpx 18rpx;
}
.last-child{
  height: 100rpx;
}
.box-msg{
  position: relative;
  display: flex;
  align-content: center;
}
.msg-me{
  display: flex;
  justify-content: flex-end;
}
.msg-item .desc{
  display: flex;
  align-content: center;
  justify-content: center;
  width: 710rpx;
  color: #aaa;
  margin: 30rpx 0;
}
.box-msg .avatar{
  border-radius: 8rpx;
  width: 70rpx;
  height: 70rpx;
}
.box-msg .cancel{
  border-radius: 6rpx;
  padding: 10rpx;
  position: absolute;
  left: -66rpx; top: -20rpx;
  color: #ffffff;
  background: #666666;
  letter-spacing: 3rpx;
}
.box-msg .content{
  margin-left: 20rpx;
  padding: 20rpx 30rpx;
  position: relative;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #ffffff;
  max-width: 526rpx;
  letter-spacing: 3rpx;
}
.box-msg .content-me{
  position: relative;
  margin-right: 20rpx;
  padding: 20rpx 30rpx;
  position: relative;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #9de35a;
  max-width: 512rpx;
  letter-spacing: 3rpx;
}

.footer{
  position: fixed;
  left: 0;
  right: 0;
  bottom: -10rpx;
  display: flex;
  justify-content: center;
  height: 110rpx;
  padding: 20rpx 30rpx;
  background: #f2f2f2;
  border-top: 1rpx solid #ededed;
  box-shadow: -1rpx -6rpx 6rpx #f2f2f2;
}

.comm-input{
  margin-bottom: 10rpx;
  border-radius: 12rpx;
  height: 80rpx;
  width: 700rpx;
  padding: 0 20rpx;
  background: #ffffff;
}