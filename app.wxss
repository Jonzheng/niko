page{
  background: #f5f5f5;
}
.isIpx{
  border-top: 1rpx solid rebeccapurple;
  height: 60rpx;
  background: transparent;
}
.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.get-user{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
  z-index: 999;
  color: #333;
  letter-spacing: 6rpx;
}

.btn-circle{
  position: relative;
  display: flex;
  flex-shrink: 0; /*固定大小*/
  background-color: #fff;
  width:105rpx;
  height:105rpx;
  z-index: -1px;
  border: 1px solid #fff;
  box-shadow: 0px 0px 10rpx #eee;
  border-radius: 50%;
  justify-content: center;
  align-items: center;
}

.sound-play{
  position: relative;
  left: 6rpx;
  width: 0;
  height: 0;
  border-left: 40rpx solid #999;
  border-top: 30rpx solid transparent;
  border-bottom: 30rpx solid transparent;
  transition: all 0.2s ease-in;
}

.sound-stop{
  position: relative;
  left:0;
  width: 0;
  height: 0;
  border: 20rpx solid #999;
  border-radius: 6rpx;
  transition: all 0.3s ease-out;
}

.black-hover{
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.2);
}

.sm-icon{
  flex-shrink: 0;
  width:26px;
  height:26px;
  margin-left: 10rpx;
  margin-right:8rpx;
  transform: rotate(0deg);
  transition: transform 0.2s ease-in;
}

.rt-90{
  transform: rotate(270deg);
  transition: transform 0.3s ease-in;
}

.blue-hover{
  transform:scale(1.01, 1.01);
  box-shadow: 0 0 20rpx rgba(0, 0, 255, 0.3);
}